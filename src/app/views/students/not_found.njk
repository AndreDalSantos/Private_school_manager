{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <div class="header">
            <a class="button" href="/students/create">Novo</a>

            <form action="/students" method="GET">
                <input
                    type="text"
                    name="filter"
                    placeholder="Nome ou email"
                    value={{filter}}
                >

                <button type="submit">Filtrar</button>
            </form>
        
            <div class="not-found-warning">Nenhum resultado encontrado!</div>

        </div>

    </div>

{% endblock content %}