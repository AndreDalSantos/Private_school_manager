{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section 
            class="avatar"
            style="background: url({{student.avatar_url}}) no-repeat center center /cover"
        ></section>

        <section class="details">
            <h3>Editar Aluno</h3>
            <form method="POST" action="/students?_method=PUT">
                {% include 'students/fields.njk' %}
    

                <div class="buttons-container">
                    <button type="submit">Salvar</button>
                    <button class="delete-button" type="submit" form="form-delete">Deletar</button>
                </div>               
                    <input type="hidden" name="id" value={{student.id}}>

            </form>

            <form id="form-delete" action="/students?_method=DELETE" method="post">
                <input type="hidden" name="id" value={{ student.id }}>
            </form>
            
        </section>
    </div>
    
    {% include "../confirm-delete.njk" %}  

{% endblock content %}